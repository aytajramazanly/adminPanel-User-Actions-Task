@model List<Expert>
@{
    ViewData["Title"] = "Index";
}

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Experts</h4>
            <p class="card-description">
                Add New Experts
                <a class="btn btn-danger btn-rounded btn-sm ms-2" asp-action="Create">+</a>
            </p>
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>Image</th>
                            <th>Name</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var expert in Model)
                        {
                            <tr>
                                <td>
                                    <div class="product-img">
                                    <img src="~/img/@expert.Image" style="width: 50px; height: 50px;"/>
                                    </div>
                                </td>
                                <td>@expert.Name</td>
                                <td>
                                    <a class="btn btn-inverse-primary btn-md" asp-action="Details" asp-route-id="@expert.Id">
                                        Details
                                    </a>
                                    <a class="btn btn-inverse-warning btn-md" asp-action="Update" asp-route-id="@expert.Id">
                                        Edit
                                    </a>
                                    <a class="btn btn-inverse-danger btn-md deleteProduct" asp-action="Delete" asp-route-id="@expert.Id">
                                        Delete
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

</div>
<nav aria-label="Page navigation example">
    <ul class="pagination justify-content-center">
        @if (ViewBag.currentPage == 1)
        {
            <li class="page-item disabled">
                <a class="page-link" tabindex="-1">Previous</a>
            </li>
        }
        else
        {
            <li class="page-item">
                <a class="page-link" asp-action="Index" asp-route-page="@(ViewBag.currentPage-1)" tabindex="-1">Previous</a>
            </li>
        }

        @for (int i = 1; i <= ViewBag.totalPageCount; i++)
        {
            <li class="page-item @(ViewBag.currentPage==i ? "active" : "")" style="@(ViewBag.currentPage==i ?"pointer-events: none" : "" )"><a class="page-link" asp-action="Index" asp-route-page="@i">@i</a></li>
        }
        @if (ViewBag.currentPage >= ViewBag.totalPageCount)
        {
            <li class="page-item" style="pointer-events: none">
                <a class="page-link" style="color: #808080">Next</a>
            </li>
        }
        else
        {
            <li class="page-item">
                <a class="page-link" asp-action="Index" asp-route-page="@(ViewBag.currentPage+1)">Next</a>
            </li>
        }

    </ul>
</nav>

@section Scripts{
    <script src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>

        $(document).ready(function () {
            $(".deleteProduct").click(function (e) {
                e.preventDefault();
                Swal.fire({
                    title: 'Are you sure?',
                    text: "You won't be able to revert this!",
                    icon: 'warning',
                    showCancelButton: true,
                    confirmButtonColor: '#3085d6',
                    cancelButtonColor: '#d33',
                    confirmButtonText: 'Yes, delete it!'
                }).then((result) => {
                    if (result.isConfirmed) {
                        let link = $(this).attr("href");
                        console.log(link);
                        fetch(link).then(response => response.json()).then(data => {
                            if (data.status == 200) {
                                swal.fire(
                                    'deleted!',
                                    'your file has been deleted.',
                                    'success'
                                )
                                setTimeout(() => { location.reload(true) }, 1500);
                            }
                            else {
                                swal.fire(
                                    'failed!',
                                    'your file can not deleted.',
                                    'error'
                                )
                            }
                        })
                    }
                })
            })
        })


    </script>
}

