
@{
    ViewData["Title"] = "Index";
    HomeVM homeVM = Model;
}

<!-- SLIDER START -->
<input type="hidden" id="MessageBox" value="@TempData["MessageBox"]" />
<section id="slider">
    <div class="owl-carousel slider">

        @foreach (var item in homeVM.SliderImages)
        {
            <div> <img src="~/img/@item.Name" alt=""> </div>
        }
    </div>
    <div class="container context pl-lg-5 ml-lg-3">
        <div class="row">
            <div class="col-lg-5">
                <div class="text">
                    @Html.Raw(homeVM.Slider.Title)
                    <p class="text-black-50 d-none d-sm-block">
                        @homeVM.Slider.SubTitle
                    </p>
                </div>
                <div class="img">
                    <img src="~/img/@homeVM.Slider.SignatureImage" alt="">
                </div>
            </div>
        </div>
    </div>
</section>

<!-- SLIDER END -->
<!-- PRODUCTS START -->

<section id="products">
    <div class="container">
        <div class="row pt-5">
            <div class="col-12 d-flex justify-content-between">
                <ul class="category-mobile d-md-none list-unstyled">
                    <li>
                        <a href="" class="categories mr-2">Categories</a>
                        <i class="fas fa-caret-down"></i>
                        <ul class="category list-unstyled" style="display: none;">
                            <li><a href="" data-id="all">All</a></li>
                            @foreach (var item in homeVM.Categories)
                            {
                                <li><a href="" data-id="@item.Name.ToLower()">@item.Name</a></li>
                            }
                        </ul>
                    </li>
                </ul>
                <ul class="category d-none d-md-flex list-unstyled">
                    <li><a href="" data-id="all">All</a></li>
                    @foreach (var item in homeVM.Categories)
                    {
                        <li><a href="" data-id="@item.Name.ToLower()">@item.Name</a></li>
                    }
                </ul>
                <ul class="list-unstyled">
                    <li>
                        <a href="" class="mr-2">Filter</a>
                        <i class="fas fa-caret-down"></i>
                    </li>
                </ul>
            </div>
        </div>
        <div class="row" id="productsRow">
            <input type="hidden" value="@ViewBag.ProductsCount" id="productsCount" />
            <partial name="_ProductPartial" model="homeVM.Products" />
        </div>
    </div>
</section>

<!-- PRODUCTS END -->
<!-- ABOUT START -->

<section id="about">
    <div class="container py-5">
        <div class="row py-5">
            <div class="col-lg-6">
                <div class="img">
                    <img src="~/img/@homeVM.About.Image" class="img-fluid" alt="">
                    <div class="player position-absolute rounded-circle d-flex align-items-center justify-content-center">
                        <i class="fas fa-play fa-lg"></i>
                    </div>
                </div>
            </div>
            <div class="col-lg-6">
                <div class="about-text mt-5 mt-lg-0 px-lg-5">
                    @Html.Raw(homeVM.About.Title)
                    <p class="py-3" @homeVM.About.Subtitle</p>
                    <ul class="list-unstyled">
                        @foreach (var item in homeVM.Advantages)
                        {
                            <li class="mt-3">
                                <img src="~/img/h1-custom-icon.png" class="mr-2" alt=""> @item.AdvantageContent
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- ABOUT END -->
<!-- EXPERTS START -->

<section id="experts">
    <div class="container">
        <div class="row py-5">
            <div class="offset-lg-3 col-lg-6">
                <div class="section-title">
                    <h1>@homeVM.ExpertsHeading.Title</h1>
                    <p class="text-black-50">
                        @homeVM.ExpertsHeading.SubTitle
                    </p>
                </div>
            </div>
        </div>
        <div class="row pb-5">
            @foreach (var expert in homeVM.Experts)
            {
                <div class="col-md-6 col-lg-3">
                    <div class="item text-center">
                        <div class="img">
                            <img src="~/img/@expert.Image" class="img-fluid rounded-circle" alt="">
                        </div>
                        <div class="text mt-3">
                            <h6>@expert.Name.ToUpper() @expert.Surname.ToUpper()</h6>
                            <p class="text-black-50">@expert.Position.Name.ToUpper()</p>
                        </div>
                    </div>
                </div>
            }
            <div class="col-lg-3"></div>
            <div class="col-lg-3"></div>
            <div class="col-lg-3"></div>
        </div>
    </div>
</section>

<!-- EXPERTS END -->
<!-- SUBSCRIBE START -->

<section id="subscribe" style="background: url('@Url.Content($"~/img/{homeVM.Subscribe.Image}")')">
    <div class="container py-5">
        <div class="row py-5">
            <div class="col-12">
                <div class="content text-center py-5">
                    <h3>@homeVM.Subscribe.Title</h3>
                    <div class="form-group d-flex justify-content-center flex-wrap mt-5">
                        <input type="email" placeholder="Email Address" class="form-control-lg rounded-0">
                        <button class="btn btn-danger btn-lg rounded-0 px-5 mt-3 mt-sm-0">Subscribe</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- SUBSCRIBE END -->
<!-- BLOG START -->

<section id="blog">
    <div class="container">
        <div class="row py-5">
            <div class="offset-lg-3 col-lg-6">
                <div class="section-title">
                    <h1>@homeVM.BlogHeading.Title</h1>
                    <p class="text-black-50">
                        @homeVM.BlogHeading.SubTitle
                    </p>
                </div>
            </div>
        </div>
        <div class="row pb-5">
            @foreach (var item in homeVM.BlogPosts)
            {
                <div class="col-md-6 col-lg-4">
                    <div class="item">
                        <div class="img position-relative">
                            <img src="~/img/@item.Image" class="img-fluid" alt="">
                            <div class="date rounded bg-light position-absolute py-1 px-2">
                                <span>@item.PostDate.ToString("dd/MM/yyyy")</span>
                            </div>
                        </div>
                        <div class="text mt-3 text-center px-5">
                            <h5>@item.Title</h5>
                            <p class="text-black-50">
                                @item.Subtitle
                            </p>
                        </div>
                    </div>
                </div>
            }


        </div>
    </div>
</section>

<!-- BLOG END -->
<!-- SAY START -->

<section id="say">
    <div class="container">
        <div class="row py-5 justify-content-center">
            <div class="col-md-8 col-xl-6">
                <div class="owl-carousel say">
                    @foreach (var comment in homeVM.ExpertsComments)
                    {
                        <div>
                            <div class="item text-center">
                                <div class="img d-flex justify-content-center">
                                    <img src="~/img/@comment.Expert.Image" alt="">
                                </div>
                                <div class="text text-muted pt-3 pb-5">
                                    <i>
                                        @comment.Comment

                                    </i>
                                </div>
                                <div class="author">
                                    <h6>@comment.Expert.Name @comment.Expert.Surname</h6>
                                    <p class="text-black-50">@comment.Expert.Position.Name.ToUpper()</p>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</section>

<!-- SAY END -->
<!-- INSTAGRAM START -->

<section id="instagram">
    <div class="owl-carousel instagram">
        @foreach (var item in homeVM.InstagramPosts)
        {
            <div><img src="~/img/@item.Image" class="img-fluid" alt=""></div>
        }
    </div>
    <div class="hastag bg-light text-muted py-2 px-3">
        #FIORELLO
    </div>
</section>

<!-- INSTAGRAM END -->
@section Scripts{
    <script>
        $(document).ready(function () {
            var message = $("#MessageBox").val();
            switch (message) {
                case "Register":
                    var type = "success";
                    var message = "You have successfully registered. Please confirm your e-mail address to login.";
                    break;
                case "ConfirmEmail":
                    var type = "success";
                    var message = "You have successfully Confirm Email.Welcome";
                    break;
                case "ForgotPassword":
                    var type = "success";
                    var message = "We sent you E-mail for reset password.Please check your Email";
                    break;
                case "ChangeEmail":
                    var type = "warning";
                    var message = "We sent you message to your new E-mail address.Please confirm for change Succesfully";
                    break;
                default:
            }

            Command: toastr[type](message)
            toastr.options = {
                "closeButton": false,
                "debug": false,
                "newestOnTop": false,
                "progressBar": false,
                "positionClass": "toast-top-right",
                "preventDuplicates": false,
                "onclick": null,
                "showDuration": "6000",
                "hideDuration": "6000",
                "timeOut": "10000",
                "extendedTimeOut": "10000",
                "showEasing": "swing",
                "hideEasing": "linear",
                "showMethod": "fadeIn",
                "hideMethod": "fadeOut"
            }
        })

    </script>
}